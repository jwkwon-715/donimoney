<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>회원가입</title>
  <link rel="stylesheet" href="/stylesheets/signup.css">
  <script src="https://cdn.iamport.kr/js/iamport.payment-1.2.0.js"></script>
</head>
<body>
  <div class="forest-bg">
    <div class="tree"></div>
    <div class="tree"></div>
    <div class="tree"></div>
    <div class="tree"></div>
    <div class="tree"></div>
    <div class="tree"></div>
    <div class="cloud"></div>
    <div class="cloud"></div>
    <div class="cloud"></div>
    <div class="ground"></div>
  </div>
  
  <a href="/" class="home-btn">
    <img src="/images/home.svg" alt="홈" class="home-icon">
  </a>
  <a href="javascript:history.back()" class="close-btn">✖</a>
  
  <div class="signup-container">
    <div class="character">
      <img src="/images/토끼_놀람.png" alt="토끼" class="rabbit-img">
    </div>
    
    <div class="logo">
      <span>도</span>
      <span>니</span>
      <span>머</span>
      <span>니</span>
    </div>
    
    <% if (error && error.length > 0) { %>
      <p class="message error"> <%= error[0] %></p>
    <% } %>

    <% if (note && note.length > 0) { %>
      <p class="message note"> <%= note[0] %></p>
    <% } %>

    <form action="/users/signup" method="POST">
      <div class="input-group">
        <label for="user_id">아이디</label>
        <input type="text" class="input-field" id="user_id" name="user_id" required>
        
        <label for="password">비밀번호</label>
        <input type="password" class="input-field" id="password" name="password" required>
        
        <label for="password2">비밀번호 확인</label>
        <input type="password" class="input-field" id="password2" name="password2" required>
        
        <div class="phone-group">
          <div class="phone-input-container">
            <label for="phone">전화번호</label>
            <input type="text" class="input-field phone-input" id="phone" name="phone">
          </div>
          <button type="button" class="verify-btn" onclick="startVerification()">📱 본인 인증</button>
        </div>
        
        <label for="email">이메일</label>
        <input type="email" class="input-field" id="email" name="email" required>
        
        <label for="birthdate">생년월일</label>
        <input type="date" class="input-field" id="birthdate" name="birthdate">
      </div>
      
      <% if (verified) { %>
        <input type="hidden" name="verified" value="true">
      <% } %>
      
      <button type="submit" class="signup-btn">회원가입</button>
    </form>
    
    <div class="login-options">
      <a href="/users/login">로그인</a>
    </div>
  </div>

  <script>
    function startVerification() {
      const IMP = window.IMP;
      IMP.init("imp76861458"); // ← 너의 아임포트 imp 코드로 바꿔야 함!

      IMP.certification({
        pg: "inicis",
        merchant_uid: "mid_" + new Date().getTime()
      }, function (rsp) {
        if (rsp.success) {
          fetch("/verify", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ imp_uid: rsp.imp_uid })
          })
          .then(res => {
            if (res.ok) {
              alert("✅ 인증 완료! 회원가입을 계속 진행하세요.");
              location.reload();
            }
          });
        } else {
          alert("❌ 인증 실패: " + rsp.error_msg);
        }
      });
    }
  </script>
</body>
</html>
