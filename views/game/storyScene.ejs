<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>스토리 플레이</title>
  <style>
    body, html {
      margin: 0;
      padding: 0;
      background-color: #000;
      overflow: hidden;
    }

    .nav-buttons {
      padding: 0;
    }
  </style>
  <!-- <link rel="stylesheet" href="/stylesheets/style.css"> -->

</head>
<body>
  <div id="game-container"></div>

  <script>
    window.storyId = <%= storyId %>;
    window.playerName = "<%= playerName %>";
  </script>

  <script src="https://cdn.jsdelivr.net/npm/phaser@3.88.2/dist/phaser.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
  <script>
  WebFont.load({
    custom: {
      families: ['Cafe24Dongdong']
    },
    active: function() {
      if (window.startPhaserGame) {
        window.startPhaserGame();
      }
    }
  });
  </script>

  <script type="module">
  import { StoryScene } from '/javascripts/story.js';

  function startPhaserGame() {
    const storyId = window.storyId;
    const playerName = window.playerName;

   const config = {
     type: Phaser.AUTO,
     parent: 'game-container',
     width: 1920,
     height: 1080,
     scale: {
       mode: Phaser.Scale.FIT,
       autoCenter: Phaser.Scale.CENTER_BOTH
     },
     physics: { default: 'arcade' },
     backgroundColor: '#000',
     scene: [StoryScene]
   };
   const game = new Phaser.Game(config);
   game.scene.start('StoryScene', { 
     storyId: storyId,
     playerName: playerName
   });

  }

  window.startPhaserGame = startPhaserGame;
</script>
</body>
</html>
