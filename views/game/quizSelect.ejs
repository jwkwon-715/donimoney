    <%# 주석 처리 %>
    

    <script>
        const swiper = new Swiper('.quiz-swiper', {
            slidesPerView: 2.6,
            spaceBetween: 88,
            centeredSlides: true,
              navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
              },
            breakpoints: {
                768: {
                    slidesPerView: 2.5
                },
                1024: {
                    slidesPerView: 3
                }
            }
        });
    </script>
</body>
